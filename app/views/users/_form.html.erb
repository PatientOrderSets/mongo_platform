<div id="main-container" class="container">
		<div class="row">
			<div class="col-md-6 wfl-card-wrap wfl-modal">
				<div class="wfl-card user-block">
					<div class="featured-block">
						<div class="user-avatar">
							<img src="http://i.imgur.com/wMkClxr.jpg">
						</div>
					</div>
					<div class="user-info">
					<%= form_for(@user) do |f| %>
                      <% if @user.errors.any? %>
                        <div id="error_explanation">
                          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

                          <ul>
                          <% @user.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                          <% end %>
                          </ul>
                        </div>
                      <% end %>
                    <div class="form-group">
                        <%= label_tag(:email, "Email", :class => "col-sm-3 control-label form-style-label") %>
                        <div class="col-sm-9 form-style-input">
                            <%= f.text_field :email, :class=> "form-control", :placeholder => "Email" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= label_tag(:first_name, "First Name", :class => "col-sm-3 control-label form-style-label") %>
                        <div class="col-sm-9 form-style-input">
                            <%= f.text_field :first_name, :class=> "form-control", :placeholder => "First Name" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= label_tag(:last_name, "Last Name", :class => "col-sm-3 control-label form-style-label") %>
                        <div class="col-sm-9 form-style-input">
                            <%= f.text_field :last_name, :class=> "form-control", :placeholder => "Last Name" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= label_tag(:address, "Address", :class => "col-sm-3 control-label form-style-label") %>
                        <div class="col-sm-9 form-style-input">
                            <%= f.text_field :address, :class=> "form-control", :placeholder => "Address" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= label_tag(:image, "Image", :class => "col-sm-3 control-label form-style-label") %>
                        <div class="col-sm-9 form-style-input">
                            <%= f.text_field :image, :class=> "form-control", :placeholder => "Image" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= label_tag(:password, "Password", :class => "col-sm-3 control-label form-style-label") %>
                        <div class="col-sm-9 form-style-input">
                            <%= f.password_field :password, :class=> "form-control", :placeholder => "Password" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= label_tag(:restaurant, "Favourite Restaurant", :class => "col-sm-3 control-label form-style-label") %>
                        <div class="col-sm-9 form-style-input">
                           <%= f.collection_select :restaurant_id, Restaurant.all, :id, :name, :prompt => "Select a Restaurant"  %>
                        </div>
                    </div>

                    <div class="user-profile">
                        <%= f.submit %>
                    </div>

					  <% end %>
					</div>

				</div>
			</div>
		</div>
	</div>
	<div id="cover"></div>








